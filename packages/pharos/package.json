{
  "name": "@ithaka/pharos",
  "publishConfig": {
    "access": "public"
  },
  "version": "8.2.1",
  "description": "Pharos web components for products and experiences",
  "files": [
    "lib",
    "custom-elements.json"
  ],
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "scripts": {
    "analyze": "wca analyze src --outFile custom-elements.json",
    "build:tokens": "node --experimental-modules ./scripts/build-tokens.mjs",
    "prebuild": "yarn clean && yarn build:tokens && yarn analyze && yarn build:react && yarn build:assets",
    "build": "yarn build:styles && yarn build:tsc && yarn build:replace",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:tsc:watch": "tsc -w --project tsconfig.build.json",
    "build:react": "gulp react --experimental-modules --experimental-json-modules",
    "build:styles": "gulp styles --experimental-modules --experimental-json-modules",
    "build:styles:watch": "gulp watch:styles --experimental-modules --experimental-json-modules",
    "build:assets": "gulp assets --experimental-modules --experimental-json-modules",
    "build:tests": "tsc --project tsconfig.json",
    "build:replace": "replace-in-file \"/(import|from)( '[.]+/)(.*)(?<!.js)(';)/g\" \"\\$1\\$2\\$3.js\\$4\" \"lib/**/*.js, lib/**/*.d.ts\" --isRegex --verbose",
    "prepublishOnly": "yarn build",
    "clean": "rimraf lib src/react-components",
    "pretest": "yarn build",
    "test": "wtr",
    "test:watch": "wtr --watch"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ithaka/pharos.git",
    "directory": "packages/pharos"
  },
  "author": "ITHAKA",
  "license": "MIT",
  "dependencies": {
    "@ithaka/focus-trap": "1.0.6",
    "@open-wc/dedupe-mixin": "^1.3.0",
    "@popperjs/core": "^2.9.1",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.27",
    "@types/react-dom": "^17.0.0",
    "@types/react": "^17.0.1",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/test-runner": "^0.13.4",
    "@web/test-runner-commands": "^0.4.5",
    "@web/test-runner-playwright": "^0.8.5",
    "autoprefixer": "^10.2.1",
    "gulp": "^4.0.2",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-prettier": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "postcss": "^8.2.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "replace-in-file": "^6.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.4",
    "sinon": "^10.0.0",
    "style-dictionary": "^2.10.2",
    "through2": "^4.0.2",
    "typescript": "^4.2.2",
    "web-component-analyzer": "^1.1.6"
  }
}
